<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/tv_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Kotlin"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/tv_my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_below="@+id/tv_hello"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/tv_my_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_below="@+id/tv_my_name"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/tv_my_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_below="@+id/tv_my_email"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

    <Button
            android:id="@+id/btnShowToast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOW TOAST"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_my_age"/>

    <TextView
            android:id="@+id/tvCountValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_below="@+id/btnShowToast"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>

    <Button
            android:id="@+id/btnCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COUNT 1+"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvCountValue"
            android:layout_marginTop="5dp"/>

    <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btnCount"
            android:layout_marginTop="5dp"/>

</RelativeLayout>